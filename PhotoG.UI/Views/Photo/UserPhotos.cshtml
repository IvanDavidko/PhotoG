@using PhotoG.DAL.Entities
@model int[]
@{
    var albums = ViewBag.Albums as IEnumerable<Album> ?? Enumerable.Empty<Album>();
}


<h1>Your photos</h1>
<div class="row">
    <h3 class="text-info">@TempData["Message"]</h3>
</div>

<div class="row photo-list-container">
    @foreach (var photoId in Model)
    {
        <div class="col-md-4 text-center">
            <div class="photo-container" data-id="@photoId">
                <img src="../../Content/Images/ajax-loader.gif" class="image-loader" />
            </div>
            <a href="/photo/edit/@photoId" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span>&nbsp;Edit
            </a>
            <a href="/photo/remove" class="btn btn-default remove-photo" data-id="@photoId">
                <span class="glyphicon glyphicon-remove"></span>&nbsp;Remove
            </a>
            <a href="#" class="btn btn-default albumstolink" data-id="@photoId">
                <span class="glyphicon glyphicon-plus"></span>&nbsp;Link To
            </a>
        </div>
    }
</div>

@Html.Partial("LinkPhotoToAlbum", albums)