@model PhotoG.DAL.Entities.Photo


<div class="row">
    <div>
        <img class="img-responsive image-large" src="@($"data:{Model.ImageType};base64,{Convert.ToBase64String(Model.Image)}")" alt="title image" />
    </div>
</div>

<div class="row title">
    <label class="col-sm-2 col-sm-offset-3 control-label">Title</label>
    <div class="col-sm-3">
        <span>@(!string.IsNullOrEmpty(Model.Title) ? Model.Title : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Photoset Date</label>
    <div class="col-sm-3">
        <span>@(Model.PhotosetDate?.ToShortDateString() ?? string.Empty)</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Camera model</label>
    <div class="col-sm-3">
        <span>@(!string.IsNullOrEmpty(Model.CameraModel) ? Model.CameraModel : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Lens Focal Length</label>
    <div class="col-sm-3">
        <span>@(Model.LensFocalLength != 0.0 ? Model.LensFocalLength.ToString() : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Diaphragm</label>
    <div class="col-sm-3">
        <span>@(!string.IsNullOrEmpty(Model.Diaphragm) ? Model.Diaphragm : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Shutter Speed</label>
    <div class="col-sm-3">
        <span>@(Model.ShutterSpeed != 0.0 ? Model.ShutterSpeed.ToString() : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">ISO</label>
    <div class="col-sm-3">
        <span>@(Model.ISO != 0.0 ? Model.ISO.ToString() : "-")</span>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-sm-offset-3 control-label">Flash in use</label>
    <div class="col-sm-3">
        <span>@(Model.FlashInUse.HasValue && Model.FlashInUse.Value ? "Yes" : "No" ) </span>
    </div>
</div>
